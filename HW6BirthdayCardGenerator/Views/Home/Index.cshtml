@model HW6BirthdayCardGenerator.Models.CustomData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Birthday Card Generator</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        <h4>Birthday Card Generator</h4>
    </div>

    <hr />
    <h1>Send a Birthday Card</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CustomForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Sender" class="control-label">From:</label>
                    <input asp-for="Sender" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Recipient" class="control-label">To:</label>
                    <input asp-for="Recipient" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label">Message:</label>
                    <input asp-for="Message" class="form-control" />
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Send Card" class="btn" />
                </div>
            </form>
        </div>
    </div>
    <br/>
    <div>
        <p>©2016 - My ASP.NET Application</p>
    </div>
</body>
</html>

<Window x:Class="Homework3SortingListViewColumns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3SortingListViewColumns"
        mc:Ignorable="d"
        Title="Sorting List Window" Height="300" Width="400">
    <Grid>
        <ListView x:Name="uxList">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="uxNameHeader" Header="Name" DisplayMemberBinding="{Binding Name}">
                    </GridViewColumn>
                    <GridViewColumn x:Name="uxPasswordHeader" Header="Password" DisplayMemberBinding="{Binding Password}">
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
